@model Projeto_Aplicado.Models.PowerBiModel;

<style>
    .main {
        width: 40%;
        margin: auto;
        margin-top: 30%;
        position: relative;
    }

    #slider {
        -webkit-appearance: none;
        width: 100%;
        height: 7px;
        border-radius: 3px;
    }

        #slider::-webkit-slider-thumb {
            -webkit-appearance: none;
            width: 48px;
            height: 48px;
            cursor: pointer;
            position: relative;
            z-index: 3;
        }

    #selector {
        height: 104px;
        width: 48px;
        position: absolute;
        bottom: -20px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 2;
    }

    #selectBtn {
        transform: scale(75%);
        height: 48px;
        width: 48px;
        background-image: url(https://static.vecteezy.com/system/resources/previews/011/029/799/original/blue-water-drop-for-symbol-design-png.png);
        background-size: cover;
        background-position: center;
        border-radius: 50%;
        position: absolute;
        bottom: 0;
    }

    #selectValue {
        margin-top: 12px;
        transform: translateX(25%);
        width: 32px;
        height: 30px;
        position: absolute;
        top: 0;
        background: rgba(33, 113, 180, 1);
        border-radius: 4px;
        text-align: center;
        line-height: 30px;
        font-size: 15px;
        font-weight: bold;
    }

        #selectValue::after {
            content: '';
            border-top: 11.3px solid rgba(33, 113, 180, 1);
            border-left: 16px solid #0D1117;
            border-right: 16px solid #0D1117;
            position: absolute;
            bottom: -14px;
            left: 0;
        }

    #progressBar {
        width: 50%;
        height: 7px;
        background: rgba(33, 113, 180, 1);
        border-radius: 3px;
        position: absolute;
        bottom: 4px;
        left: 0;
    }

    .button-1 {
        background: #066C8B;
        border-radius: 999px;
        box-shadow: #066C8B 0 10px 20px -10px;
        box-sizing: border-box;
        color: rgba(255,255,255, 1);
        cursor: pointer;
        font-family: Inter,Helvetica,"Apple Color Emoji","Segoe UI Emoji",NotoColorEmoji,"Noto Color Emoji","Segoe UI Symbol","Android Emoji",EmojiSymbols,-apple-system,system-ui,"Segoe UI",Roboto,"Helvetica Neue","Noto Sans",sans-serif;
        font-size: 16px;
        font-weight: 700;
        line-height: 24px;
        opacity: 1;
        outline: 0 solid transparent;
        padding: 8px 18px;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
        width: fit-content;
        word-break: break-word;
        border: 0;
    }

        .button-1:hover {
            transform: scale(1.02);
        }

    .switch {
        font-weight: 600;
        background: #eee;
        position: absolute;
        width: 150px;
        height: 50px;
        text-align: center;
        margin: -30px 0 0 -75px;
        background: #0AC07D;
        transition: all 0.2s ease;
        border-radius: 25px;
    }

        .switch span {
            position: absolute;
            width: 20px;
            height: 4px;
            top: 50%;
            left: 50%;
            margin: -2px 0px 0px -4px;
            background: #fff;
            display: block;
            transform: rotate(-45deg);
            transition: all 0.2s ease;
        }

            .switch span:after {
                content: "";
                display: block;
                position: absolute;
                width: 4px;
                height: 12px;
                margin-top: -8px;
                background: #fff;
                transition: all 0.2s ease;
            }

    input[type=radio] {
        display: none;
    }

    .switch label {
        cursor: pointer;
        color: rgba(0,0,0,0.2);
        width: 60px;
        line-height: 50px;
        transition: all 0.2s ease;
    }

    label[for=no] {
        position: absolute;
        left: 0px;
        height: 20px;
    }

    label[for=yes] {
        position: absolute;
        right: 0px;
    }

    #no:checked ~ .switch {
        background: #eb4f37;
    }

        #no:checked ~ .switch span {
            background: #fff;
            margin-left: -8px;
        }

            #no:checked ~ .switch span:after {
                background: #fff;
                height: 20px;
                margin-top: -8px;
                margin-left: 8px;
            }

    #yes:checked ~ .switch label[for=yes] {
        color: #fff;
    }

    #no:checked ~ .switch label[for=no] {
        color: #fff;
    }

    p {
        color: #fff;
    }
</style>

<body style="background-color: #0D1117" />

<form asp-controller="FormularioPowerBi" asp-action="Value">
    <input asp-for="UsuarioId" type="hidden">
    <div class="form1">
        <div>
            <p class="col-form-label">Você bebe a água da sua torneira?</p>
        </div>
        <div class="toggle-radio">
            <input asp-for="value1" value="0" type="radio" name="rdo" id="no" checked>
            <input asp-for="value1" value="1" type="radio" name="rdo" id="yes">
            <div class="switch">
                <label for="no">Não</label>
                <label for="yes">Sim</label>
                <span></span>
            </div>
        </div>
    </div>
    <div class="main">
        <input asp-for="value2" value="50" type="range" min="0" max="100" step="10" id="slider">
        <div id="selector">
            <div id="selectBtn"></div>
            <div id="selectValue"></div>
        </div>
        <div id="progressBar"></div>
    </div>
    <div style="margin-top: 2rem; justify-content: space-between" class="row g-12">
        <div class="col-12">
            <button style=" margin-top: 7%; width: 100%; position: relative; float: right;" type="submit" class="button-1">Cadastrar</button>
        </div>
    </div>
</form>

<script>
    let slider = document.getElementById('slider')
    let selector = document.getElementById('selector')
    let selectValue = document.getElementById('selectValue')
    let progressBar = document.getElementById('progressBar')

    selectValue.innerHTML = slider.value

    slider.oninput = function() {
        selectValue.innerHTML = this.value
        selector.style.left = this.value + '%'
        progressBar.style.width = this.value + '%'
    }

</script>