<style>
    .main {
        width: 20%;
        margin: 14% auto;
        position: relative;
    }

    #slider {
        -webkit-appearance: none;
        width: 100%;
        height: 7px;
        border-radius: 3px;
    }

        #slider::-webkit-slider-thumb {
            -webkit-appearance: none;
            width: 48px;
            height: 48px;
            cursor: pointer;
            position: relative;
            z-index: 3;
        }

    #selector {
        height: 104px;
        width: 48px;
        position: absolute;
        bottom: -20px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 2;
    }

    .selectBtn {
        transform:scale(75%);
        height: 48px;
        width: 48px;
        background-image: url(https://static.vecteezy.com/system/resources/previews/011/029/799/original/blue-water-drop-for-symbol-design-png.png);
        background-size: cover;
        background-position: center;
        border-radius: 50%;
        position: absolute;
        bottom: 0;
    }

    #selectValue {
        margin-top: 12px;
        transform: translateX(25%);
        width: 32px;
        height: 30px;
        position: absolute;
        top: 0;
        background: rgba(33, 113, 180, 1);
        border-radius: 4px;
        text-align: center;
        line-height: 30px;
        font-size: 15px;
        font-weight: bold;
    }

        #selectValue::after {
            content: '';
            border-top: 11.3px solid rgba(33, 113, 180, 1);
            border-left: 16px solid #0D1117;
            border-right: 16px solid #0D1117;
            position: absolute;
            bottom: -14px;
            left: 0;
        }

    #progressBar {
        width: 50%;
        height: 7px;
        background: rgba(33, 113, 180, 1);
        border-radius: 3px;
        position: absolute;
        bottom: 4px;
        left: 0;
    }
</style>

<body style="background-color: #0D1117" />

<form>
    <div class="main">
        <input type="range" min="0" max="100" step="10" id="slider">
        <div id="selector">
            <div class="selectBtn"></div>
            <div id="selectValue"></div>
        </div>
        <div id="progressBar"></div>
    </div>
</form>

<script>
    let slider = document.getElementById('slider')
    let selector = document.getElementById('selector')
    let selectValue = document.getElementById('selectValue')
    let progressBar = document.getElementById('progressBar')

    selectValue.innerHTML = slider.value

    slider.oninput = function() {
        selectValue.innerHTML = this.value
        selector.style.left = this.value + '%'
        progressBar.style.width = this.value + '%'
    }

</script>